{
  "name": "nft-drop-contracts",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "generate-abi": "npx hardhat export-abi",
    "dev:prettier": "npx prettier --write .",
    "dev:prettier-check": "npx prettier --check .",
    "dev:sollint": "npx solhint contracts/**/*.sol",
    "dev:contract-size": "npx hardhat size-contracts",
    "dev:slither": "slither . --config-file slither.config.json",
    "prettier:fix": "npx prettier --write \"contracts/**/*.sol\"",
    "prettier:check": "npx prettier --check \"contracts/**/*.sol\"",
    "deploy:mainnet": "npx hardhat deploy --network mainnet",
    "export:mainnet": "npx hardhat export --network mainnet --export config/mainnet.json",
    "deploy:matic": "npx hardhat deploy --network matic",
    "export:matic": "npx hardhat export --network matic --export config/matic.json",
    "deploy:bsc": "npx hardhat deploy --network bsc",
    "export:bsc": "npx hardhat export --network bsc --export config/bsc.json",
    "deploy:goerli": "npx hardhat deploy --network goerli",
    "export:goerli": "npx hardhat export --network goerli --export config/goerli.json",
    "deploy:mumbai": "npx hardhat deploy --network mumbai",
    "export:mumbai": "npx hardhat export --network mumbai --export config/mumbai.json",
    "deploy:testnet": "npx hardhat deploy --network testnet --tags all",
    "export:testnet": "npx hardhat export --network testnet --export config/testnet.json"

  },
  "devDependencies": {
    "@chainlink/contracts": "^0.4.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.2",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.7.0",
    "@openzeppelin/contracts-upgradeable": "^4.7.0",
    "@openzeppelin/hardhat-upgrades": "^1.19.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/mocha": "^9.1.1",
    "chai": "^4.3.6",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.0",
    "hardhat-deploy": "^0.11.11",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha-suppress-logs": "^0.3.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "typechain": "^8.1.0",
    "web3": "^1.7.4"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.4.0",
    "@ethersproject/bignumber": "^5.5.0",
    "@openzeppelin/contracts": "^4.5.0",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "base64-sol": "^1.1.0",
    "csv-parse": "^5.3.0",
    "dotenv": "^16.0.0",
    "fast-csv": "^4.3.6",
    "fs": "^0.0.1-security",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-contract-sizer": "^2.6.1",
    "path": "^0.12.7",
    "save": "^2.5.0",
    "surya": "^0.4.6"
  }
}
